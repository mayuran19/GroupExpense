<div class="panel panel-primary">
<div class="panel-heading">Edit user expense</div>
<div class="panel-body">
<div class="row">
<div class="col-md-6 col-md-offset-3">

<% if @expense_per_user.errors.any? %>
    <div class="alert alert-danger">
      <b><%= pluralize(@expense_per_user.errors.count, "Error") %> prohibited this expense from being saved:</b>
      <ul>
      <% @expense_per_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<%= form_for([@expense, @expense_per_user], :html => {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :division_factor_per_user, 'Division factor', class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.text_field :division_factor_per_user, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit 'Update', :class => "btn btn-primary" %>
      <%= link_to 'Back', root_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>
</div>
</div>
</div>