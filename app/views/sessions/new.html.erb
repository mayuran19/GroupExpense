<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% flash.each do |name, msg| -%>
          <%= content_tag :div, msg, class: "alert alert-warning" %>
      <% end -%>
      <% if @registration.errors.any? %>
          <div class="alert alert-danger">
            <b><%= pluralize(@registration.errors.count, "Error") %> prohibited this registration from being saved:</b>
            <ul>
            <% @registration.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
      <% end %>
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" class="active" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="#" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_tag sessions_path, style: "display: block;", id: "login-form" do %>
                  <div class="form-group">
                    <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Username" %>
                  </div>
                  <div class="form-group">
                    <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="form-group text-center">
                    <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                    <label for="remember"> Remember Me</label>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= submit_tag "Log in", class: "form-control btn btn-login" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <a href="#" tabindex="5" class="forgot-password">Forgot Password?</a>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
              <%= form_for @registration, url: registrations_path, html: {style: "display: none;", id: "register-form"} do |f| %>
                <div class="form-group">
                  <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :firstname, class: "form-control", placeholder: "First name" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :lastname, class: "form-control", placeholder: "Last name" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :groupname, class: "form-control", placeholder: "Group name" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :confirm_password, class: "form-control", placeholder: "Confirm password" %>
                </div>
                <div class="form-group">
                  <%= f.date_select :start_date, {}, {:class => "form-control", :style => "display: inline;width: 32.5%;"} %>
                </div>
                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <%= f.submit 'Register Now', :class => "form-control btn btn-register", :id => "register-submit" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>